[include]
  path = ~/.gitconfig-default
[includeIf "gitdir:~/dotfiles/**"]
  path = ~/.gitconfig-personal
[init]
  defaultBranch = main
[push]
  default = current
[color]
  ui = auto
[core]
  excludesfile = ~/.gitignore
  editor = nvim
  autocrlf = input
  commitGraph = true
[merge]
  ff = only
[commit]
  template = ~/.gitmessage
[fetch]
  prune = true
[rebase]
  autosquash = true
[diff]
  colorMoved = zebra
  algorithm = patience
[gc]
  writeCommitGraph = true
[protocol]
  version = 2
